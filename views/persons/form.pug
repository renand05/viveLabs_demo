extends ../base.pug

block content
  h3 #{action} person
  form(method="POST")
    .form-group
      label(for="first") First Name
      input.form-control(type="text", name="first", id="first", value=person.first)
    .form-group
      label(for="last") Author
      input.form-control(type="text", name="last", id="last", value=person.last)
    .form-group
      label(for="dateOfBirth") Date Published
      input.form-control(type="text", name="dateOfBirth", id="dateOfBirth", value=person.dateOfBirth)
    .form-group
      label(for="email") Email
      input.form-control(type="text", name="email", id="email", value=person.email)
    .form-group
    button.btn.btn-success(type="submit") Save
